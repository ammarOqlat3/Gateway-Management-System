@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task1_Part2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task1_Part2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <a class="navbar-brand" href="#">
                <img src="https://aimanaj.github.io/HR-Management-System/All%20pages/assest/images/logojpg.jpg" alt="Logo" style="height: 40px;">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mx-auto">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    <a class="nav-link" asp-controller="Home" asp-action="feadback">Feedback</a>
                    <a class="nav-link" asp-controller="Home" asp-action="shop">shop</a>


                </ul>
                @{
                    var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
                }

                @if (isLoggedIn)
                {
                    <a class="btn btn-outline-info m-2" asp-controller="Users" asp-action="myProfile">My Profile</a>
                    <a class="btn btn-outline-info" asp-controller="Users" asp-action="myPosts">My Posts</a>
                    <a class="btn btn-outline-danger text-white ms-2" asp-controller="Users" asp-action="Logout">Logout</a>

                }
                else
                {
                    <a class="btn btn-outline-info m-2" asp-controller="Home" asp-action="regster">Register</a>
                    <a class="btn btn-outline-info" asp-controller="Home" asp-action="login">Login</a>
                }


              



            </div>
        </nav>


        </div>
    </header>
