@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/changePassword.css" />
}


    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6 col-sm-10">
                <div class="card bg-light text-dark shadow">
                    <div class="card-header text-center">
                        <h4>Change Password</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info">
                                @ViewBag.Message
                            </div>
                        }

                        <form asp-action="ChangePassword" method="post">
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" name="currentPassword" class="form-control" id="currentPassword" placeholder="Enter current password" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" name="newPassword" class="form-control" id="newPassword" placeholder="Enter new password" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm new password" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Update Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // إذا في ViewBag.Message (خطأ)
            @if (ViewBag.Message != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@ViewBag.Message'
                    });
                    </text>
            }
        </script>
    }



