}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://aimanaj.github.io/HR-Management-System/All%20pages/assest/images/home1.jpg" alt="First slide">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <div class="text-box">
                    <h3 class="fw-bold">GateWay</h3>
                    <p>Your Place to enhance productivity,<br>and empower your workforce.</p>
                </div>
            </div>
        </div>


        <div class="carousel-item">
            <img class="d-block w-100" src="https://aimanaj.github.io/HR-Management-System/All%20pages/assest/images/banner.jpg" alt="Second slide">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <div class="text-box">
                    <h3 class="fw-bold">GateWay</h3>
                    <p>Your Place to enhance productivity,<br>and empower your workforce.</p>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="https://aimanaj.github.io/HR-Management-System/All%20pages/assest/images/banner2.jpg" alt="Third slide">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <div class="text-box">
                    <h3 class="fw-bold">GateWay</h3>
                    <p>Your Place to enhance productivity,<br>and empower your workforce.</p>
                </div>
            </div>
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

